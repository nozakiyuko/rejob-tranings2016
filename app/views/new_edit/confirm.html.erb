<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>確認ページ</title>
  </head>
  <body>
    <div class="page-header">
      <h1>確認</h1>
    </div>

    <%= form_for @new_edit, :url => 'thanks' do |f| %>
    <form action="thanks" class="new_edit" id="new_edit" method="post">
      <input name="authenticity_token" type="hidden" value="1234" />
      <table class="table">
        <tr>
          <th>タイトル</th>
          <td>
            <%= f.hidden_field :title %>
            <%= @new_edit.title %>
          </td>
        </tr>
        <tr>
          <th>説明文</th>
          <td>
            <%= f.hidden_field :description %>
            <%= @new_edit.description %>
          </td>
        </tr>
        <tr>
          <th>都道府県</th>
          <td>
            <%= f.hidden_field :area %>
            <%= @new_edit.area %>
          </td>
        </tr>

      </table>
      <%= f.submit '送信', :class => 'btn btn-primary' %>
    <% end %>
  </body>
</html>
